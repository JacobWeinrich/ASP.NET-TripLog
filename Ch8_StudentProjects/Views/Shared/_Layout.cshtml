<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">TripLog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Home">View Trips</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Destination">Manage Destinations</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Accommodation">Manage Accommodations</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="Index" asp-controller="Activity">Manage Activities</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="bg-secondary p-3 text-center">
            <span class="text-white display-4 fw-bold">My Trip Log</span>
        </div>
        @if (ViewBag.SubHeader != null)
        {
            <div class="bg-info text-center">
                <span class="text-white fs-2 fw-bold">@ViewBag.SubHeader</span>
            </div>
        }

        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>